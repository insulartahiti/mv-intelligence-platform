{
  "metrics": [
    {
      "id": "arr_growth_yoy",
      "name": "ARR Growth YoY",
      "business_models": ["saas", "marketplace", "aum"],
      "category": "Growth",
      "description": "Year-over-year growth rate of Annual Recurring Revenue (or AUM).",
      "formula": "(arr_current - arr_last_year) / arr_last_year",
      "inputs": ["arr_current", "arr_last_year"],
      "unit": "percentage",
      "display_format": "0.0%",
      "benchmark_bands": {
        "poor": "< 1.0",
        "good": "1.0 - 1.5",
        "great": "> 1.5"
      },
      "notes": "Ensure ARR is normalized for non-recurring service fees."
    },
    {
      "id": "gross_margin",
      "name": "Gross Margin",
      "business_models": ["saas", "marketplace", "consumer", "aum"],
      "category": "Margin",
      "description": "Total Revenue minus Cost of Goods Sold (COGS), divided by Total Revenue.",
      "formula": "(revenue_total - cogs_total) / revenue_total",
      "inputs": ["revenue_total", "cogs_total"],
      "unit": "percentage",
      "display_format": "0.0%",
      "benchmark_bands": {
        "poor": "< 0.70",
        "good": "0.70 - 0.85",
        "great": "> 0.85"
      },
      "notes": "SaaS target > 85%, AUM > 70%, Consumer > 70%"
    },
    {
      "id": "nrr",
      "name": "Net Revenue Retention (NRR)",
      "business_models": ["saas", "marketplace", "aum"],
      "category": "Retention",
      "description": "Percentage of recurring revenue retained from existing customers over a specific period, including upsells, downgrades, and churn.",
      "formula": "(revenue_beginning + revenue_expansion - revenue_churn - revenue_contraction) / revenue_beginning",
      "inputs": ["revenue_beginning", "revenue_expansion", "revenue_churn", "revenue_contraction"],
      "unit": "percentage",
      "display_format": "0.0%",
      "benchmark_bands": {
        "poor": "< 1.0",
        "good": "1.0 - 1.4",
        "great": "> 1.4"
      },
      "notes": "Include upsells/cross-sells. Exclude new customer revenue."
    },
    {
      "id": "ltv_cac",
      "name": "LTV / CAC",
      "business_models": ["saas", "consumer"],
      "category": "Unit Economics",
      "description": "Ratio of Customer Lifetime Value to Customer Acquisition Cost.",
      "formula": "ltv / cac",
      "inputs": ["ltv", "cac"],
      "unit": "multiple",
      "display_format": "0.0x",
      "benchmark_bands": {
        "poor": "< 3.0",
        "good": "3.0 - 7.0",
        "great": "> 7.0"
      },
      "notes": "LTV should be gross margin adjusted."
    },
    {
      "id": "cac_payback",
      "name": "CAC Payback Period",
      "business_models": ["saas", "marketplace", "consumer"],
      "category": "Efficiency",
      "description": "Months required to earn back the cost of acquiring a customer.",
      "formula": "cac / (arpa * gross_margin_percent)",
      "inputs": ["cac", "arpa", "gross_margin_percent"],
      "unit": "months",
      "display_format": "0.0",
      "benchmark_bands": {
        "poor": "> 12",
        "good": "6 - 12",
        "great": "< 6"
      },
      "notes": "Standard calculation based on MRR."
    },
    {
      "id": "burn_multiple",
      "name": "Burn Multiple",
      "business_models": ["saas"],
      "category": "Efficiency",
      "description": "Net Burn divided by Net New ARR.",
      "formula": "net_burn / net_new_arr",
      "inputs": ["net_burn", "net_new_arr"],
      "unit": "multiple",
      "display_format": "0.0x",
      "benchmark_bands": {
        "poor": "> 2.0",
        "good": "1.5 - 2.0",
        "great": "< 1.5"
      },
      "notes": "Lower is better."
    },
    {
      "id": "rule_of_40",
      "name": "Rule of 40",
      "business_models": ["saas"],
      "category": "Efficiency",
      "description": "Sum of ARR Growth Rate (%) and Profit Margin (%) (usually EBITDA or FCF).",
      "formula": "arr_growth_rate + ebitda_margin",
      "inputs": ["arr_growth_rate", "ebitda_margin"],
      "unit": "percentage",
      "display_format": "0.0%",
      "benchmark_bands": {
        "poor": "< 0.40",
        "good": "= 0.40",
        "great": "> 0.40"
      },
      "notes": "Can be based on adj. EBITDA or FCF margin."
    },
    {
      "id": "magic_number",
      "name": "Magic Number",
      "business_models": ["saas"],
      "category": "Efficiency",
      "description": "Net New ARR (current Q) * 4 / Sales & Marketing Expense (previous Q).",
      "formula": "(net_new_arr_q * 4) / sales_marketing_expense_prev_q",
      "inputs": ["net_new_arr_q", "sales_marketing_expense_prev_q"],
      "unit": "multiple",
      "display_format": "0.0x",
      "benchmark_bands": {
        "poor": "< 0.75",
        "good": "0.75 - 1.0",
        "great": "> 1.0"
      },
      "notes": "Measures sales efficiency."
    },
    {
      "id": "take_rate",
      "name": "Take Rate",
      "business_models": ["marketplace", "transactions"],
      "category": "Monetization",
      "description": "Net Revenue divided by Gross Merchandise Volume (GMV) or Total Transaction Volume (TTV).",
      "formula": "net_revenue / gmv",
      "inputs": ["net_revenue", "gmv"],
      "unit": "percentage",
      "display_format": "0.00%",
      "benchmark_bands": {
        "poor": "< 0.05",
        "good": "0.05 - 0.15",
        "great": "> 0.15"
      },
      "notes": "Varies significantly by marketplace type."
    }
  ]
}


